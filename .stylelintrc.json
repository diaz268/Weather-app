{
  "extends": [
    "stylelint-config-standard",
    "stylelint-config-property-sort-order-smacss",
    "stylelint-prettier/recommended"
  ],
  "plugins": [
    "stylelint-scss",
    "stylelint-prettier"
  ],
  "rules": {
    "prettier/prettier": [
      true,
      {
        "singleQuote": false,
        "tabWidth": 4
      }
    ],
    "at-rule-no-unknown": null,
    "scss/at-rule-no-unknown": true
  }
}